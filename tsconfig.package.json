{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "strict": true,
        "composite": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true
    }
}
